<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.zhangman.espressouitest">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Espressouitest">
        <activity android:name=".recyclerview.RecyclerViewTestActivity"></activity>
        <activity android:name=".mocking.MockingActivity" />
        <activity android:name=".customToastMatcher.CustomToastMatcherActivity" />
        <activity android:name=".dialogInputTest.DialogInputTestActivity" />
        <activity android:name=".intent.camera.CameraIntentActivity" />
        <activity android:name=".intent.gallery.GalleryIntentActivity" />
        <activity android:name=".fragmentisolation.FragmentIsolationActivity" />
        <activity android:name=".simpleactivity.SecondaryActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".simpleactivity.FirstActivity" />
        <activity android:name=".idlingResource.IdlingResourceActivity" />
    </application>

</manifest>